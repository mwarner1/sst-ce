<service_bundle type='manifest' name='SUNWsst:nddconfig'>

<service
	name='network/nddconfig'
	type='service'
	version='1'>

	<create_default_instance enabled='false' />

	<dependency
		name='method_installed'
		grouping='require_all'
		restart_on='restart'
		type='path'>
		<service_fmri
			value='file://localhost/lib/svc/method/nddconfig' />
	</dependency>

	<dependent
                name='nddconfig_network'
                grouping='optional_all'
                restart_on='none'>
                <service_fmri value='svc:/network/loopback' />
        </dependent>

	<exec_method
		type='method'
		name='start'
		exec='/lib/svc/method/nddconfig %m'
		timeout_seconds='60'>
	</exec_method>

	<exec_method
		type='method'
		name='refresh'
		exec='/lib/svc/method/nddconfig %m'
		timeout_seconds='60'>
	</exec_method>

	<exec_method
		type='method'
		name='stop'
		exec=':true'
		timeout_seconds='3'>
	</exec_method>

	<property_group name='startd' type='framework'>
		<propval name='duration' type='astring' value='transient' />
	</property_group>

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
				ndd configuration
			</loctext>
		</common_name>
                <description>
                        <loctext xml:lang='C'>
                                Involves setting any tunable parameters.
                        </loctext>
                </description>
		<documentation>
			<manpage title='ndd' section='1M'
				manpath='/usr/share/man' />
		</documentation>
	</template>
</service>

</service_bundle>

