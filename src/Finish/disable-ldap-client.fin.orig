#
# This script prevents the LDAP client service from starting.
#

logMessage "Disabling the function: Lightweight Directory Access Protocol (LDAP) client"
echo ""

if check_os_min_revision 5.10 ; then
   disable_service_immediate svc:/network/ldap/client:default
elif check_os_min_revision 5.8 ; then
   if [ "${JASS_DISABLE_MODE}" = "conf" ]; then
      disable_conf_file ${JASS_ROOT_DIR}var/ldap ldap_client_file
   elif [ "${JASS_DISABLE_MODE}" = "script" ]; then
      if [ "${JASS_KILL_SCRIPT_DISABLE}" = "1" ]; then
         disable_rc_file ${JASS_ROOT_DIR}etc/rcS.d K41ldap.client
         disable_rc_file ${JASS_ROOT_DIR}etc/rc0.d K41ldap.client
         disable_rc_file ${JASS_ROOT_DIR}etc/rc1.d K41ldap.client
      fi
      disable_rc_file ${JASS_ROOT_DIR}etc/rc2.d S71ldap.client
   fi
else
   logInvalidOSRevision "5.8+"
fi
